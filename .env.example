# Blockchain-Konfiguration für ASI-System
# Kopiere diese Datei als .env und fülle die Werte aus

# Polygon Mumbai Testnet (für Entwicklung)
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/
POLYGON_RPC_URL=https://polygon-rpc.com/

# Private Key (OHNE 0x Prefix)
# ACHTUNG: NIE in Versionskontrolle speichern!
PRIVATE_KEY=your_private_key_here

# ASI Smart Contract Adresse (wird nach Deployment gesetzt)
ASI_CONTRACT_ADDRESS=0x...

# Memory Token Contract (wird nach Deployment gesetzt)
MEMORY_TOKEN_ADDRESS=

# Deployer Private Key (NUR FÜR TESTNET!)
DEPLOYER_PRIVATE_KEY=

# USDC Mumbai Testnet Contract
USDC_MUMBAI_ADDRESS=0x326C977E6efc84E512bB9C30f76E30c160eD06FB

# DAO Treasury Address
DAO_TREASURY_ADDRESS=0x742d35Cc6636C0532925a3b8Ad21Bb93C7C9cdeb

# PolygonScan API Key für Contract-Verifizierung (optional)
POLYGONSCAN_API_KEY=your_api_key_here

# Blockchain-Features aktivieren/deaktivieren
ENABLE_BLOCKCHAIN=true
AUTO_REGISTER_ON_CHAIN=false

# Stripe Configuration (für Credit System)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Snapshot.org Governance
SNAPSHOT_SPACE_ID=asi-core.eth
SNAPSHOT_API_URL=https://hub.snapshot.org/graphql

# ASI Core API
ASI_API_BASE_URL=http://localhost:5000
ASI_MAIN_DEBUG=true
ASI_MAIN_HOST=0.0.0.0
ASI_MAIN_PORT=5000
BLOCKCHAIN_NETWORK=mumbai

# Flask/Web Security & Server Settings
# Secret Key für Flask-Sessions (in Produktion setzen!)
ASI_SECRET_KEY=please_change_me

# Web-App (src/web/app.py)
ASI_DEBUG=true
ASI_HOST=0.0.0.0
ASI_PORT=8000
ASI_COOKIE_SECURE=false

# API-Server (api_server.py)
ASI_API_DEBUG=true
ASI_API_HOST=0.0.0.0
ASI_API_PORT=5000

# Main Flask Entry (main.py serve)
ASI_MAIN_DEBUG=true
ASI_MAIN_HOST=0.0.0.0
ASI_MAIN_PORT=5000
