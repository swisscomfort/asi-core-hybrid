name: "ğŸ”§ GitHub Pages Setup Helper"

on:
  workflow_dispatch:
    inputs:
      setup_pages:
        description: "Setup GitHub Pages"
        required: true
        default: true
        type: boolean

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  setup-pages:
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ“¥ Checkout Repository
        uses: actions/checkout@v4

      - name: ğŸ“¦ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: "npm"
          cache-dependency-path: web/package-lock.json

      - name: ğŸ”§ Install Dependencies
        run: |
          cd web
          npm ci

      - name: ğŸ—ï¸ Build PWA
        run: |
          cd web
          npm run build
          echo "ğŸš€ Build completed successfully!"

      - name: âš™ï¸ Configure GitHub Pages
        uses: actions/configure-pages@v4

      - name: ğŸ“¤ Upload Pages Artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: web/dist

      - name: ğŸš€ Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4

      - name: âœ… Setup Complete
        run: |
          echo "ğŸ‰ GitHub Pages setup completed!"
          echo "ğŸŒ Your PWA should be available at:"
          echo "https://swisscomfort.github.io/asi-core/"
          echo ""
          echo "ğŸ“‹ If you see a 404, please:"
          echo "1. Go to Repository Settings â†’ Pages"
          echo "2. Ensure Source is set to 'GitHub Actions'"
          echo "3. Wait a few minutes for DNS propagation"
