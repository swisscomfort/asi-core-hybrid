name: "ğŸš€ Deploy to Vercel"

on:
  push:
    branches: [main]
    paths:
      - "web/**"
      - ".github/workflows/deploy-vercel.yml"
  workflow_dispatch:

env:
  NODE_VERSION: "20"

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ“¥ Checkout Repository
        uses: actions/checkout@v4

      - name: ğŸ“¦ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: "npm"
          cache-dependency-path: web/package-lock.json

      - name: ğŸ”§ Install Dependencies
        run: |
          cd web
          npm ci --prefer-offline --no-audit

      - name: ğŸ—ï¸ Build PWA
        run: |
          cd web
          npm run build
          echo "ğŸš€ PWA Build completed successfully!"

      - name: ğŸŒ Deploy to Vercel
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.ORG_ID }}
          vercel-project-id: ${{ secrets.PROJECT_ID }}
          working-directory: ./web
          vercel-args: "--prod"

      - name: âœ… Deployment Complete
        run: |
          echo "ğŸ‰ PWA successfully deployed to Vercel!"
          echo "ğŸŒ Your app will be available at your Vercel URL"
          echo "ğŸ“± PWA Features: âœ… Installable âœ… Offline âœ… Auto-Update"
