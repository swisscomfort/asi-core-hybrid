# Security Scanning & Vulnerability Assessment
# Comprehensive security checks for ASI-Core

name: ðŸ›¡ï¸ Security Scan

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]
  schedule:
    - cron: '0 3 * * 1'  # WÃ¶chentlich Montags um 3 Uhr

permissions:
  security-events: write
  actions: read
  contents: read

jobs:
  security_scan:
    runs-on: ubuntu-latest
    steps:
      - name: ðŸ“¥ Checkout
        uses: actions/checkout@v4
        
      - name: ðŸ Python Security Scan
        uses: pypa/gh-action-pip-audit@v1.0.8
        with:
          inputs: requirements.txt
          
      - name: ðŸ“¦ NPM Security Audit
        run: |
          cd web
          npm audit --audit-level=high
          
      - name: ðŸ” CodeQL Analysis
        uses: github/codeql-action/init@v3
        with:
          languages: python, javascript
          
      - name: ðŸ—ï¸ Autobuild
        uses: github/codeql-action/autobuild@v3
        
      - name: ðŸ” Perform CodeQL Analysis
        uses: github/codeql-action/analyze@v3
        
      - name: ðŸ³ Docker Security Scan
        uses: aquasecurity/trivy-action@master
        with:
          image-ref: 'asi-core:latest'
          format: 'sarif'
          output: 'trivy-results.sarif'
          
      - name: ðŸ“¤ Upload Trivy Results
        uses: github/codeql-action/upload-sarif@v3
        with:
          sarif_file: 'trivy-results.sarif'
          
      - name: ðŸ” Secret Scanning
        uses: trufflesecurity/trufflehog@main
        with:
          path: ./
          base: main
          head: HEAD
          extra_args: --debug --only-verified
          
      - name: ðŸ§ª SAST Scan
        uses: securecodewarrior/github-action-add-sarif@v1
        with:
          sarif-file: 'security-results.sarif'
          
      - name: ðŸ“‹ Security Report
        run: |
          echo "## ðŸ›¡ï¸ Security Scan Results" > security_report.md
          echo "- Python Dependencies: âœ… Scanned" >> security_report.md
          echo "- NPM Dependencies: âœ… Scanned" >> security_report.md  
          echo "- Code Analysis: âœ… CodeQL Complete" >> security_report.md
          echo "- Docker Image: âœ… Trivy Scan" >> security_report.md
          echo "- Secret Detection: âœ… TruffleHog" >> security_report.md
          echo "Generated: $(date)" >> security_report.md