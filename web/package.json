{
  "name": "@swisscomfort/asi-core-pwa",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "ASI-Core Progressive Web Application - Artificial Self-Intelligence System",
  "keywords": ["asi", "ai", "pwa", "blockchain", "decentralized", "semantic-search"],
  "author": "SwissComfort <your@email.com>",
  "license": "MIT",
  "homepage": "https://swisscomfort.github.io/asi-core/",
  "repository": {
    "type": "git",
    "url": "https://github.com/swisscomfort/asi-core.git",
    "directory": "web"
  },
  "bugs": {
    "url": "https://github.com/swisscomfort/asi-core/issues"
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "preview:pwa": "npm run build && npm run preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "serve": "npx serve dist -p 3000",
    "pwa:start": "npm run build && npm run preview",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@irys/sdk": "^0.1.4",
    "@storacha/client": "^1.7.9",
    "@web3-storage/w3up-client": "^17.3.0",
    "axios": "^1.8.2",
    "ethers": "^6.15.0",
    "files-from-path": "^1.1.4",
    "idb": "^8.0.3",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "valtio": "^1.13.2",
    "vite-plugin-pwa": "^1.0.3",
    "wagmi": "^2.16.9",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "typescript": "^5.3.3",
    "vite": "^7.1.2"
  }
}
